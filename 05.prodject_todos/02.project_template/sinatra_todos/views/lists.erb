
<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li>
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
<p><a href="/lists/new">New List</a></p>
<p><a href="/lists/delete">Delete Most Recent List </a></p>
<% end %>